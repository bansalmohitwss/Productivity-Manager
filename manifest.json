{
    "manifest_version":2,
    "name":"Productivity-Manager",
    "version": "1.0",
    "description": "",
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ],
      
    "browser_action":{
        "default_popup":"popup.html",
        "default_title":"Productivity-Manager",
        "default_icon":{
          "19":"images/p_icon-19.png"
        }
    },
    "background": {
        "scripts": [
         
          "objectparser.js",
          "request.js",
          "hashANDcurData.js",
          "background.js"],
          "persistent": false
    },
    "permissions": [
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*",
        "alarms"
    ],
    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net/npm/chart.js@2.8.0; object-src 'self'"
      
}